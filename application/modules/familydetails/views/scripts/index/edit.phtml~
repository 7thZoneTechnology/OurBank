<script type="text/javascript">
    function fn(path,countnumber) 
    {
        var id=document.getElementById('number').value;
        if(id) {
            targeturl=path+"/familydetails/index/getfamilymembersedit?id="+id+"&count="+countnumber;
            $.ajax({ url: targeturl, success: function(data){ $("#familymember").html(data) }});
        }
    }
</script>
<form action="<?php echo $this->baseUrl();?>/familydetails/index/edit/id/<?php echo $this->memberid; ?>" method="POST">
<table id="hor-minimalist-b">
<tr> 
    <th width="27%">&nbsp;Family member Name</h>
    <th width="12%">Age</TD>
    <th width="10%">Gender</Th>
    <th width="17%">Relation</Th>
    <th width="17%" align="left">Physical Status</Th>
    <th width="17%" align="left">Marital Status</th>
    <th></th>
</tr>
<?php  

for($i=1;$i<=$this->family_number;$i++) {
	$j=$i-1;
    $a='name'.$i;
    $b='age'.$i;
    $c='gender'.$i;
    $d='relationship'.$i;
    $e='physicalstatus'.$i;
    $f='maritalstatus'.$i;
    $g='familymember_id'.$i;
	$value=$this->value;	
?>
<tr>
    <td><?php echo $this->form->$a; ?></td>
    <td><?php echo $this->form->$b; ?></td>
    <td><?php echo $this->form->$c; ?></td>
    <td><?php echo $this->form->$d; ?></td>
    <td><?php echo $this->form->$e; ?></td>
    <td><?php echo $this->form->$f;echo $this->form->$g ?></td>
<td><a href="<?php echo $this->baseUrl();?>/familydetails/index/deletemember/id/<?php echo $value[$j];  ?>/member_id/<?php echo $this->memberid; ?> "><img src="<?php echo $this->baseUrl(); ?>/images/delete.gif" border=0 width="16" height="16"></a></td>
</tr> 
<?php  } ?>
<table id="familymember"></table>
<TR><TD><?php echo $this->translate("Additional number of family member"); ?></TD><TD><input type="text" name="number" id="number" onkeyup="fn('<? echo $this->baseUrl();?>',<? echo $this->family_number; ?>)"></TD><td></td><td></td><td></td><td></td></TR>

