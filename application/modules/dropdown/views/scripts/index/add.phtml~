<script type='text/javascript' src="<?php  echo $this->baseUrl();?>/js/jquery-latest.js"></script>

<script type="text/javascript">
function getstate(state,path) { 
	if(state) {
	 	targeturl=path+"/dropdown/index/district?state="+state;
		$.ajax({ url: targeturl, success: function(data){ $("#statediv").html(data) }});
	}
}
</script>


<script type="text/javascript">
function getdistrict(district,path) { 
	if(district) {
	 	targeturl=path+"/dropdown/index/taluk?district="+district;
		$.ajax({ url: targeturl, success: function(data){ $("#districtdiv").html(data) }});
	}
}
</script>

<script type="text/javascript">
function gettaluk(taluk,path) { 
	if(taluk) {
	 	targeturl=path+"/dropdown/index/hobli?taluk="+taluk;
		$.ajax({ url: targeturl, success: function(data){ $("#talukdiv").html(data) }});
	}
}
</script>

<script type="text/javascript">
function gethobli(hobli,path) { 
	if(hobli) {
	 	targeturl=path+"/dropdown/index/gillapanchayath?hobli="+hobli;
		$.ajax({ url: targeturl, success: function(data){ $("#hoblidiv").html(data) }});
	}
}
</script>

<script type="text/javascript">
function getgillapanchayath(gillapanchayath,path) { alert(gillapanchayath);
	if(gillapanchayath) {
	 	targeturl=path+"/dropdown/index/village?gillapanchayath="+gillapanchayath;
		$.ajax({ url: targeturl, success: function(data){ $("#gillapanchayathdiv").html(data) }});
	}
} 
</script>

<script type="text/javascript">
function getvillage(village,path) { alert(village);
	if(village) {
	 	targeturl=path+"/dropdown/index/gillapanchayath?village="+village;
		$.ajax({ url: targeturl, success: function(data){ $("#villagediv").html(data) }});
	}
} 
</script>





