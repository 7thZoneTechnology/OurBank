<script type="text/javascript">
function getstate(state,path) { 
	if(state) {
	 	targeturl=path+"/dropdown/index/district?state="+state;
		$.ajax({ url: targeturl, success: function(data){ $("#statediv").html(data) }});
	}
}
</script>
<script type="text/javascript">
function gettaluk(taluk,path) { 
	if(taluk) {
	 	targeturl=path+"/dropdown/index/hobli?taluk="+taluk;
		$.ajax({ url: targeturl, success: function(data){ $("#talukdiv").html(data) }});
	}
}
</script>
<script type="text/javascript">
function getpanchayath(gillapanchayath,path) { 
	if(gillapanchayath) {
	 	targeturl=path+"/dropdown/index/village?gillapanchayath="+gillapanchayath;
		$.ajax({ url: targeturl, success: function(data){ $("#gillapanchayathdiv").html(data) }});
	}
} 
</script>
