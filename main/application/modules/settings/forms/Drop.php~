// 	$fieldtype,$fieldname,$table,$columnname,$cssname,$labelname,$required,$validationtype,$min,$max,$rows,$cols,$decorator,$value

		
	
        $name = $formfield->field('Text','name','','','mand','name',true,'','','','','',1,0);
      

        

        // Hidden Feilds 
      

					
            $this->addElements(array($name));
    }
}