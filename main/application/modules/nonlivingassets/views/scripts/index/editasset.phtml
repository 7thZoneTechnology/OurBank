                if($(this).next('span').length == 0 ) {
                   $(this).after('<span style="color: #FF0000">Numeric Data allowed only.</span>');
                }
                e.preventDefault();
                return;
            } else {
                if($(this).next('span').length > 0  && isValid)
                    $(this).next('span').remove();
            }
        }); 
    });
