                }
                e.preventDefault();
                return;            } else {
                        if($(this).next('span').length > 0 )
                    $(this).next('span').remove();            }
        });
        $(this).find(':text.numeric').each(function() {
            var regex = new RegExp(/^[1-9][0-9]*$/);
            if(!regex.test($(this).val()) && isValid) {
